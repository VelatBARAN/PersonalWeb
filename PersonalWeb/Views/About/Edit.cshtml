@model PersonalWeb.Models.Entity.About

@{
    ViewBag.Title = "Güncelleme Sayfası";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="~/Content/validation-summary.css" rel="stylesheet" />

<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>

<div class="container">
    <div class="row">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>

    <div class="row">
        @using (Html.BeginForm("Edit", "About", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <div class="col-md-3">
                    <label>Resim</label>
                    <img src="~/images/about/@Model.ImageURL" class="img-circle img-responsive" width="200" height="200" />
                    @Html.HiddenFor(model => model.ImageURL)
                    <br /><br />
                    <input type="file" name="ImageURL" id="ImageURL" class="form-control" /><br />
                    <span class="glyphico glyphicon-info-sign">&nbsp;</span>
                    <span><i>Lütfen .png,.jpeg ya da .jpg formatı kullanın</i></span>
                </div>

                <div class="col-md-6">

                    @Html.ValidationSummary(false)
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "form-label col-md-2" })
                        <div class="col-md-10">
                            <textarea name="Text" class="ckeditor form-control" required>@Model.Text</textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10 col-md-offset-1">
                            <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-edit"></span>Güncelle</button>
                            <a href="/yonetimpaneli/hakkimizda" class="btn btn-default"><span class="glyphicon glyphicon-circle-arrow-left"></span>İptal</a>
                        </div>
                    </div>

                    <div class="col-md-3">
                        &nbsp;
                    </div>
                </div>
            </div>
        }
    </div>
</div>